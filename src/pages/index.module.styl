@import 'rupture'
@import '../styles/common'

/* general */

a.button
  fnButton(1.5rem)

$bsPane
  @extend $bsContent
  height 100vh

/* pane 1 */

.pane1
  @extend $bsPane
  background $colorBlack
  color $colorWhite
  display flex
  flex-direction row
  justify-content center
  align-items center
  +mobile()
    flex-direction column

.pane1_textBox
  max-width 400px
  text-align: center
  p
    font-size 2rem
    line-height 3.5rem
    color $colorGrayDark
    text-align: center
    margin 0 0 3rem
    +mobile()
      font-size 1.5rem
      line-height: 2.5rem
  em
    font-size 120%
    color $colorWhite
    &.em2
      color inherit
      font-size 90%
      font-style italic
  strong
    font-size 150%
    font-weight 700
    color $colorWhite


.pane1_imageBox
  width 640px
  height 480px
  +tablet()
    width 480px
    height 360px
  +mobile()
    width 320px
    height 240px

/* feature pane */

$bsFeaturePane
  @extend $bsContent
  margin-top 50px
  margin-bottom 50px
  display flex
  flex-direction row
  justify-content center
  align-items center
  +mobile()
    flex-direction column

.featurePaneLeft
  @extend $bsFeaturePane
  +mobile()
    & > section:nth-child(1)
      order 2
    & > section:nth-child(2)
      order 1

.featurePaneRight
  @extend $bsFeaturePane
  & > section:nth-child(1)
    order 2
  & > section:nth-child(2)
    order 1

.info
  max-width 400px

.info_title
  font-weight: 700

