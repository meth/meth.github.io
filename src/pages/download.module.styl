@import 'rupture'
@import '../styles/common'

/* general */

.container
  @extend $bsContent
  min-height 100vh
  padding-top 6rem
  padding-bottom 3rem
  display flex
  flex-direction: column
  justify-content: flex-start
  align-items: center

  h1
    font-size 3rem
    font-weight 700
    margin-bottom 2rem


.unableToDetermineOs
  margin 1rem 0
  
.error
  background-color: $colorRed
  color $colorWhite
  font-size 1.2rem
  padding 1em
  border-radius 5px
  line-height: 1.5rem

.downloadButtons
  display flex
  flex-direction: column
  justify-content: flex-start
  align-items: center

.buttonRow
  text-align: center

$buttonBase
  min-width 10rem
  display inline-block
  border-radius 10px
  border 1px solid $colorPrimary
  padding 1rem 2rem
  text-align: center
  margin 1rem
  i
    font-size 5rem
    margin-bottom 0.5rem
  span
    margin-top 0.5rem
    display block
    text-align: center

.button
  @extend $buttonBase
  &:visited
    @extend $buttonBase
  &:hover
  &:active
    @extend $buttonBase
