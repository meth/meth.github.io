@require '../../styles/common'

.container
  top 0
  left 0
  width 100vw
  background $colorBlack
  padding 2rem
  display flex
  flex-direction row
  justify-content space-between

  a
  a:visited
    color $colorGrayDark
    border-color $colorGrayDark
  a:hover
  a:active
    background-color transparent
    color $colorWhite
    border-color $colorWhite

.right
  display flex
  flex-direction row
  justify-content: flex-end
  align-items: flex-start
  span
    font-size 0.8rem
    margin-right 1rem
    color $colorGrayDark
  i
    font-size 1.5rem
    color $colorGray

.menu
  font-size 0.8rem
  li
    margin-bottom 1rem

.social
  display block
  li
    display inline-block

.copyright
  margin-top 3rem
  color $colorGrayDark
  font-size 0.6rem
